@model MVCTutorial.Models.Employee
@{
    ViewData["Title"] = "Delete";
}
<h2>Delete Employee</h2>

<div>
    <h4>Are you sure you want to delete this employee?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@Model.Salary</dd>

        <dt class="col-sm-2">Photo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="@Model.PhotoPath" alt="Employee Photo" style="width:100px;height:100px;object-fit:cover;" />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />
        <button type="submit" class="btn neon-btn danger">Delete</button>
        <a asp-action="NeonIndex" class="btn neon-btn">Cancel</a>
    </form>
</div>
