@model MVCTutorial.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

<div class="card" style="width: 20rem;">
    <img src="@Model.PhotoPath" class="card-img-top" alt="Employee Photo">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            <strong>Salary:</strong> @Model.Salary <br />
            <strong>ID:</strong> @Model.Id
        </p>
    </div>
</div>
<div>
    <h4>Department Info</h4>
    @if (Model.Department != null)
    {
        <p><strong>Name:</strong> @Model.Department.Name</p>
        <p><strong>Location:</strong> @Model.Department.Location</p>
    }
    else
    {
        <p>No department assigned.</p>
    }
</div>
<div class="d-flex align-items-center p-3 border rounded" style="max-width: 600px;">
    <!-- Profile Picture -->
    <img src="@Model.PhotoPath" alt="Profile Picture"
         class="rounded-3"
         style="width: 240px; height: 240px; object-fit: cover;" />

    <!-- Info Section -->
    <div class="ms-5">
        <h2>@Model.Name</h2>
        <p><strong>Age:</strong> 28</p>
        <p><strong>Department:</strong> @Model.Department?.Name</p>
    </div>
</div>

<div class="futuristic-card">
    <img src="@Model.PhotoPath" alt="Profile Picture" class="profile-img-futuristic" />
    <div class="profile-info-futuristic">
        <h2>@Model.Name</h2>
        <p><strong>Age:</strong> 36</p>
        <p><strong>Department:</strong> @Model.Department?.Name</p>
    </div>
</div>


<br />

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
