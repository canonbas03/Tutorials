@model IEnumerable<MVCTutorial.Models.Employee>

<h1>Employees</h1>
<p>
    <a asp-action="Create" class="btn btn-success">+ Create New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(emp.PhotoPath))
                    {
                        <img src="@emp.PhotoPath" alt="Employee Photo" style="width:50px;height:50px;object-fit:cover;" />
                    }
                </td>
                <td>@emp.Name</td>
                <td>@emp.Salary</td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>

            </tr>
        }
    </tbody>


</table>

@foreach (var emp in Model)
{
    <div class="card mb-3" style="max-width: 600px;">
        <div class="row g-0 align-items-center">
            <div class="col-auto">
                @if (!string.IsNullOrEmpty(emp.PhotoPath))
                {
                    <img src="@emp.PhotoPath" alt="Employee Photo" class="img-fluid rounded-start" style="width:80px; height:80px; object-fit:cover;" />
                }
                else
                {
                    <div class="bg-secondary rounded-start d-flex align-items-center justify-content-center" style="width:80px; height:80px;">
                        <span class="text-white">No Photo</span>
                    </div>
                }
            </div>
            <div class="col">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-1">@emp.Name</h5>
                        <p class="card-text mb-1">Salary: @emp.Salary.ToString("C")</p>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-info btn-sm me-1">View</a>
                        <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@foreach (var emp in Model)
{
    <div class="futuristic-card mb-4">
        <div class="futuristic-row">
            <div class="futuristic-photo">
                @if (!string.IsNullOrEmpty(emp.PhotoPath))
                {
                    <img src="@emp.PhotoPath" alt="Employee Photo" />
                }
                else
                {
                    <div class="no-photo">No Photo</div>
                }
            </div>
            <div class="futuristic-info">
                <div class="name-salary-row">
                    <h3 class="neon-text">@emp.Name</h3>
                    <span class="neon-text salary-text">@emp.Salary.ToString("C")</span>
                </div>
            </div>
            <div class="futuristic-actions">
                <a asp-action="Details" asp-route-id="@emp.Id" class="btn neon-btn">View</a>
                <a asp-action="Edit" asp-route-id="@emp.Id" class="btn neon-btn">Edit</a>
                <a asp-action="Delete" asp-route-id="@emp.Id" class="btn neon-btn danger">Delete</a>
            </div>
        </div>
    </div>
}



